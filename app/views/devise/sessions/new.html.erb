<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, class:"form-control", placeholder:"Email or username" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In", class:"btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>